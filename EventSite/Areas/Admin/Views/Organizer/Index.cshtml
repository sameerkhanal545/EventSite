@model IEnumerable<Organizer>

@{
    ViewData["Title"] = " | Manage Organizers";
}

<h1 class="mb-2">Manage Organizers</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add an Organizer</a></h5>
    </li>

</ul>


 <table class="table table-bordered table-striped table-sm">
      <thead>
        <tr><th>Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var organizer in Model)
        {
            <tr>
                 <td>@organizer.OrganizerName</td>
                <td>
                    <div class="float-right">
                        <a asp-action="Select" asp-controller="Organizer" asp-route-operation="view events" asp-route-id="@organizer.OrganizerId" my-button>View Events</a>
                        <a asp-action="Select" asp-controller="Organizer" asp-route-operation="Edit" asp-route-id="@organizer.OrganizerId" my-button>Edit</a>
                        <a asp-action="Select" asp-controller="Organizer" asp-route-operation="Delete" asp-route-id="@organizer.OrganizerId" my-button>Delete</a>
                     
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>