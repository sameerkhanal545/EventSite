@model List<OrderViewModel>

<h2>My Orders</h2>

@if (Model.Count == 0)
{
    <p>You have no orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Order Total</th>
                <th>Shippping Address</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.OrderTotal</td>
                    <td>@order.AddressLine1, @order.City, @order.State</td>
                    <td>
                        <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.OrderId">View Details</a>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
}
